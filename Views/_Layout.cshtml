@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Tutorial">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/41c8b474e2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link href="/css/style.css" rel="stylesheet">
    <title>@ViewData["title"]?.ToString() | Crito</title>
</head>
<body>
    <div class="wrapper">
        <main>

            <!-- nav-bar -->
            <section class="nav-bar">
                <div class="container">
                    <div class="img-holder">
                        <a href="home.html">
                            <img src="./images/logos/crito-black.png" />
                        </a>
                    </div>

                    <div class="all-info">
                        <div class="contact-info-bar">
                            <div class="d-flex align-items-center">
                                <div class="phone">
                                    <i class="fa-sharp fa-light fa-phone-volume"></i>
                                    <a href="#">+46 (8) 121 470 50</a>
                                    <p class="vertical">|</p>
                                </div>
                                <div class="mail">
                                    <i class="fa-light fa-envelope-dot"></i>
                                    <a href="#">info@crito.com</a>
                                    <p class="vertical">|</p>
                                </div>
                                <div class="address">
                                    <i class="fa-sharp fa-light fa-location-dot"></i>
                                    <a href="#">Sveavägen 31, 111 34 STOCKHOLM</a>
                                </div>
                            </div>
                            <div class="social-media">
                                <a href="#"><i class="fa-brands fa-facebook"></i></a>
                                <a href="#"><i class="fa-brands fa-x-twitter"></i></a>
                                <a href="#"><i class="fa-brands fa-instagram"></i></a>
                                <a href="#"><i class="fa-brands fa-linkedin"></i></a>
                            </div>
                        </div>
                        <hr>
                        <div class="nav-links">
                            <div class="links">
                                <a href="home.html">
                                    Home
                                    <div class="link-underline"></div>
                                </a>
                                <a href="#">
                                    Service
                                    <div class="link-underline"></div>
                                </a>
                                <a href="news.html">
                                    News
                                    <div class="link-underline"></div>
                                </a>
                                <a href="contact.html">
                                    Contact
                                    <div class="link-underline"></div>
                                </a>
                            </div>
                            <button href="#" class="yellow-btn">
                                Login<i class="fa-regular fa-arrow-up-right"></i>
                            </button>
                        </div>
                    </div>

                </div>
            </section>

            @RenderBody()
        </main>
        
        @await Html.PartialAsync("_Footer")
        
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>
    <script src="~/scripts/script.js"></script>
    <script src="https://kit.fontawesome.com/41c8b474e2.js" crossorigin="anonymous"></script>
</body>
</html>